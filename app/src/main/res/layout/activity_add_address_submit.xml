<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavan.cardoctor.AddAddressSubmit">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countrySubmit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter Country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stateSubmit"
        android:layout_below="@+id/countrySubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/countrySubmit"
        android:layout_alignEnd="@+id/countrySubmit"
        android:hint="Enter state" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/citySubmit"
        android:layout_below="@+id/stateSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/stateSubmit"
        android:layout_alignEnd="@+id/stateSubmit"
        android:hint="Enter City" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subregionSubmit"
        android:layout_below="@+id/citySubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/citySubmit"
        android:layout_alignEnd="@+id/citySubmit"
        android:hint="Enter SubRegion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/streetAddressSubmit"
        android:layout_below="@+id/subregionSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/subregionSubmit"
        android:layout_alignEnd="@+id/subregionSubmit"
        android:hint="Enter Street Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button14"
        android:layout_below="@+id/streetAddressSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="submit" />
</RelativeLayout>
